/* pages/check/check.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100vh;
  align-items: center;
  justify-content: start;
  padding: 0 4rpx;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.takephone{
  height: 75vh;
  width: 100%;
  border: 1px solid rgb(140, 129, 129);
  display: flex;
  flex-direction: column;
  justify-content: stretch;
}
.phone{
  width:70px;
  height:70px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  word-spacing: 1.5em;
  background:rgb(19, 17, 17) ;
  color: white;
  border-radius: 50%;
  font-size:17px;
  font-weight: 500;
  border:solid 5px rgb(233, 223, 223);
  padding:3px 3px 3px 3px;
}
.phone:hover{
  background-color:rgb(72, 67, 67);
}
.getphone{
  height: 15vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.selectImage{
  width: 100%;
  height:10vh;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: space-evenly;
  font-size:17px;
  font-weight:450;

}

.selectImage label{
  height:10vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
  font-size:17px;
}
.selectImage label:nth-of-type(1){
  width:30vw;
  text-align: center;
}
.picker{
  width:30vw;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selectImage label:nth-of-type(2){
  height: 60px;
  text-align: center;
}
.selectImage label:nth-of-type(3){
  width:30vw;
  height: 60px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}





