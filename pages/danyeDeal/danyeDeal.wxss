/* pages/check/check.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:99.9vh;
  align-items: center;
  justify-content: start;
  padding: 0 4rpx;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.takephone{
  height: 100vh;
  width: 100%;
  border: 1px solid #8c8181;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
}
.phone{
  width:10vh;
  height:10vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background:#131111 ;
  border-radius: 50%;
  border:solid 5px #e9dfdf;
}
.phone:hover{
  background-color:rgb(72, 67, 67);
}
.getphone{
  height: 15vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  position:absolute;
  top:85vh;
  left: 0;
}
.selectImage{
  width: 100%;
  height:15vh;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: space-evenly;
  font-size:17px;
  font-weight:450;

}

.selectImage label{
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
  font-size:17px;
}
.selectImage label:nth-of-type(1){
  width:28vw;
  text-align: center;
}
.picker{
  width:28vw;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selectImage label:nth-of-type(2){
  height: 100%;
  width:28vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.selectImage label:nth-of-type(3){
  width:30vw;
  height: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;

}
.finish_ok{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  border:solid 1px #afadad;
  justify-content: center;
  letter-spacing:1px;
  box-shadow: 2px 2px 10px #888888;
  border-radius: 5px;
}

.finish{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  border:solid 1px #afadad;
  justify-content: center;
  letter-spacing:1px;
  background-color: #ebe5e5;
  color: #bbb7b7;
  box-shadow: 2px 2px 10px #888888;
  border-radius: 5px;
}





