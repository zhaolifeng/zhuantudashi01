/* pages/piaoju/piaoju.wxss */
.main{
  width:100vw;
  height:92vh;
  overflow:auto;
  /* border: solid 1px red; */
} 

.line{
  max-height: max-content;
  min-height:30px;
  padding-left:5px;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.line-checkbox{
  max-width: 25px;
  max-height: 25px;
}

.menu{
  height: 8vh;
  width:100vw;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}
.menu view{
  height:100%;
  width:100%;
  border-right: solid  1px rgb(185, 191, 185);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color:rgb(45, 43, 43);
  color: white;
}
.menu view:last-child{
  border-right:none;
}
.bottom{
  height: 8vh;
  width:100vw;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

textarea{
  border: solid 1px red;
}
.primary{
  padding-bottom: 20px;
}