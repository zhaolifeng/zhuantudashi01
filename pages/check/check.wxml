<!--pages/check/check.wxml-->
<view class="container">
    <view class="takephone">
      <camera device-position="back" flash="auto" binderror="error" style="width: 100%; height:100%"></camera>
    </view>
    <view class="getphone">
      <view class="phone" bindtap="startCamera"  data-typeCode="{{typeCode}}">
      </view>
    </view>
    <view class="selectImage">
        <label>
              <view class="picker"  catchtap="chooseImages">
                选 图 > >
              </view>
      </label>
        <label style="z-index:{{mode?999:-1}};">
        <view hidden="{{!(count==2)}}">
            <button  disabled="{{takePhones == 0 || takePhones%2 != count%2}}" bindtap="startDeal" style="width:30vw;height:50px;padding-top:13px;backgroup-color:#ccc; box-shadow: 0 2px 5px #ccc;">完成 <block  wx:if="{{takePhones>0}}">({{takePhones}})</block>
            </button>
        </view>
        <view hidden="{{!(count!=2)}}">
          <button  disabled="{{takePhones == 0}}" bindtap="startDeal" style="width:30vw;height:50px;padding-top:13px;backgroup-color:#ccc; box-shadow: 0 2px 5px #ccc;">完成 <block  wx:if="{{takePhones>0}}">({{takePhones}})</block>
          </button>
        </view>
      </label>
      <label>
          <switch checked="{{mode}}" bindchange="changeMode"/>批量
      </label>
      
    </view>
</view> 
<mytoast id="mytoast"></mytoast>

