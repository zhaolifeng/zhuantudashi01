.infoItem{
 height:auto;
 width:99vw;
 display: flex;
 flex-direction: column;
 align-items: center;
}

.item{
 width:95vw;
 height: 100%;
 min-height:35px;
 height: auto;
 word-break: break-all;
 line-height:20px;
 border-bottom:dashed 1px #ccc;
 padding-top:10px;
 font-weight:300;
 display: flex;
 justify-content: start;
}
.menu{
  width:100vw;
  height:7vh;
  display: flex;
  justify-content: space-evenly;
  background-color: #000033;
  background-color: #000027;
  position: fixed;
  bottom: 0;
}
.menu view{
  width:30vw;
  height:7vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
.menu view:nth-of-type(2){
  border-left: solid 1px white;
  border-right: solid 1px white;

}