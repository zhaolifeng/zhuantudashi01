<!--pages/piaoju/piaoju.wxml-->
<view class="main">
<checkbox-group bindchange="checkboxChange">
    <view id="resultData002002" wx:for="{{resultData}}" wx:for-index="idx" wx:for-item="itemName" s>
          <view wx:if="{{itemName.value !=''}}" > 
              <view class="line">
                <checkbox value="{{itemName.name}}" checked="{{itemName.checked}}">
                 
                  
                  <!-- <text selectable="true">{{itemName.value}}</text> -->
                </checkbox>
                <!-- <input type="text" value="{{itemName.value}}" maxlength="999" style="width:60%"></input> -->
                 {{itemName.name}}：{{itemName.value}}
              </view>    
          </view>
    </view>
</checkbox-group>
</view>
<view class="menu" >
    <view bindtap="selectAll">
        <checkbox></checkbox>
    </view>
    <view bindtap="onEditor">编辑</view>
    <view bindtap="rest">撤销</view>
    <view bindtap="onCopyInfo">复制</view>
    <view>导出</view>
</view>

<view class="showEditor" style="z-index:{{show}}">
    <form bindsubmit="bindFormSubmit">
    <view id="finish" bindtap="closeEditor">
        <image src="/pages/image/select/close.png"></image>
    </view>
    <view class="editor">
        <view wx:if="{{editorData}}">         
            <view class="showEditorInfo" wx:for="{{editorData}}" wx:for-index="idx" wx:for-item="itemName">
                    <view >
                        {{itemName.name}}：                   
                    </view>
                    <view>
                        <textarea  name="{{itemName.name}}" value="{{itemName.value}}"  auto-height="auto"/> 
                    </view>
            </view>
        </view>
    </view>
    <view class="subbmit">
         <button  form-type='submit' plain='true' style="border:0"> 完 成 </button>
    </view>
<view>
</view>
   </form>
</view>

