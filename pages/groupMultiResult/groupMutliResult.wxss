/* pages/groupMultiResult/groupMutliResult.wxss */
.main{
  height: 100vh;
  width: 100vw;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  display:flex;
  flex-direction: column;
  justify-content: stretch;
  background-color: #f1f1f1;
}
.container{
  width:98vw;
  height: 87vh;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: start;
  overflow:auto;
  position: relative;

}
.group{
  height: 30vh;
  width: 98vw;
  border-bottom:solid 1px #ccc;
  box-shadow: 0 2px 5px #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: auto;
}
.item {
  height:25vh;
  width:40vw;
  border:solid 1px #ccc;
  margin: 0 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.del{
  height:30px;
  width:30px;
  border: solid 1px #ccc;
  border-radius: 50%;
  position: absolute;
  top:-10px;
  right:-10px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(240, 155, 155);
}
.del image{
  height:25px;
  width:25px;
}
.index{
  height:100%;
  width:18vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.deal{
  height:13vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add{
  height:40vw;
  width:40vw;
  border:solid 1px #ccc;
  margin: 0 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add image{
  height:30vw;
  width:30vw;
}