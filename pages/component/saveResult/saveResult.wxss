.main{
  height: 101vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #000000cc;

}
.setArea{
  height:220px;
  width:80vw;
  display: flex;
  flex-direction: column;
  background:#fff;
  border-radius: 3px;
  border:solid 2px rgb(112, 111, 111);
}
.close{
  height:40px;
  width: 40px;
  border-radius:50%;
  opacity: 1;
  background-color:#fff;
  position: relative;
  top:-20px;
  left: 75vw;
  margin-right:0;
}
.close image{
  height:40px;
  width: 40px;
}
.titleInfo{
  height:100px;
  width:100%;
 display: flex;
 flex-direction: column;
 justify-content: center;
 align-items: center;
}
